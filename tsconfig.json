{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@sdk": ["src/sdk/index.js"],
      "@sdk/*": ["src/sdk/*"]
    },
    "types": ["vite/client"]
  },
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"]
}